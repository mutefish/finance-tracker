<h2>User Details</h2>
<div class="card card-header results-block">
    <table class="col-md-12">
        <tbody>
            <tr>
                <td><strong>Full name: </strong> <%= @user.full_name %></td>
                <td><strong>Email: </strong> <%= @user.email %></td>
                <% if !current_user.is_friends_with(@user.id) %>
                    <td><%= link_to 'Follow user', friendships_path(friend: @user) , class: "btn btn-sm btn-success", method: :post %></td>
                <% else %>
                    <td>
                        <span class="badge badge-secondary">
                            You are friends
                        </span>
                    </td>
                <% end %>
            </tr>
        </tbody>
    </table>
</div>

<% if !@tracked_stocks.empty? %>
    <%= render 'stocks/list' %>
<% else %>
    <p class='lead'> This user is not tracking any stocks! </p>
<% end %>