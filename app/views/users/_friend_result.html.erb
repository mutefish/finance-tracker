<div class="results-block">
    <%= render 'layouts/messages' %>
</div>
<% if @friends.any? %>
    <div class="card card-header results-block">
        <table class="col-md-12">
            <tbody>
                <% @friends.each do |friend| %>
                    <tr>
                        <td><strong>Full name: </strong> <%= friend.full_name %></td>
                        <td><strong>Email: </strong> <%= friend.email %></td>
                        <td><%= link_to 'View profile', '#', class: "btn btn-sm btn-success" %></td>
                        <td><%= link_to 'Follow user', '#', class: "btn btn-sm btn-success", method: :post %></td>
                    </tr>
                <% end %>
            </tbody>
        </table>
    </div>
<% end %>