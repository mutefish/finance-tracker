<div class="results-block">
    <%= render 'layouts/messages' %>
</div>
<% if @friends.any? %>
    <div class="card card-header results-block">
        <table class="col-md-12">
            <tbody>
                <% @friends.each do |friend| %>
                    <tr>
                        <td><strong>Full name: </strong> <%= friend.full_name %></td>
                        <td><strong>Email: </strong> <%= friend.email %></td>
                        <td><%= link_to 'View profile', user_path(friend), class: "btn btn-sm btn-success" %></td>
                        <% if !current_user.is_friends_with(friend.id) %>
                            <td><%= link_to 'Follow user', friendships_path(friend: friend) , class: "btn btn-sm btn-success", method: :post %></td>
                        <% else %>
                            <td>
                                <span class="badge badge-secondary">
                                    You are friends
                                </span>
                            </td>
                        <% end %>
                    </tr>
                <% end %>
            </tbody>
        </table>
    </div>
<% end %>