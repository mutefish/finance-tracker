<div class="results-block">
    <%= render 'layouts/messages' %>
</div>
<% if @friends.any? %>
    <div class="card card-header results-block">
        <% @friends.each do |friend| %>
            <strong>Full name: </strong> <%= friend.full_name %>
            <strong>Email: </strong> <%= friend.email %>
            <%= link_to 'View profile', '#', class: "btn btn-sm btn-success" %>
            <%= link_to 'Follow user', '#', class: "btn btn-sm btn-success", method: :post %>
        <% end %>
    </div>
<% end %>